<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel</title>
    <link rel="stylesheet" href="../style/client_styling_tailwind.css">
    <link rel="stylesheet" href="../style/client_additional_styling_class.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>

<body>
    <div class="w-full min-h-screen bg-gray-200/40">
        <div class="w-full flex gap-2 items-center p-3 px-5 h-[70px] bg-white border">
            <div id="sidebarControl" class="w-12 flex flex-col gap-1 p-2 border">
                <div class="w-full h-1 bg-neutral-400 rounded"></div>
                <div class="w-full h-1 bg-neutral-400 rounded"></div>
                <div class="w-full h-1 bg-neutral-400 rounded"></div>
            </div>
            <h1 class="text-lg font-semibold">
                Dashboard
            </h1>
        </div>
        <div class="w-full flex">
            <div id="sidebar"
                class="fixed py-3 pl-5 z-20 -translate-x-full custom-height w-[320px] bg-white shadow transition-all duration-300 ease-in-out">
                <button id="sidebarMenu"
                    class="relative overflow-hidden text-start text-md uppercase font-semibold w-full p-3 transition-all duration-100">
                    Profile
                </button>
                <button id="sidebarMenu"
                    class="relative overflow-hidden text-start text-md uppercase font-semibold w-full p-3 bg-[#FFDF00]/75 transition-all duration-100">
                    System
                </button>
                <button id="sidebarMenu"
                    class="relative text-start overflow-hidden text-md uppercase font-semibold w-full p-3 transition-all duration-100">
                    User
                </button>
                <button id="sidebarMenu" onclick="window.location.href = '/login';"
                    class="relative text-start overflow-hidden text-md uppercase font-semibold w-full p-3 transition-all duration-100">
                    Logout
                </button>
            </div>


            <div id="swup" class="w-full custom-height py-3 px-5 md:px-10 overflow-x-auto">
                <h1 class="mb-2 text-lg font-semibold md:text-2xl">
                    <a href="/">Company Name</a>
                </h1>
                <div id="menu"
                    class="w-full h-[120px] mb-1 bg-white border border-neutral-200 rounded duration-100 transition-all">
                </div>
            </div>
        </div>

        <div id="options"
            class="m-0 p-0 fixed z-10 bottom-[190px] translate-x-96 right-9 border-2 border-yellow-300 rounded-full w-16 h-16 text-center transition-all duration-500 bg-[#FFDF00] shadow">
            <button class="relative w-full h-full rounded-full overflow-hidden">
                <div
                    class="w-full h-full text-4xl font-semibold flex justify-center items-center transition-all duration-75">
                    <img src="../Src/Assets/table-plus-white.svg" class="w-8" alt="">
                </div>
            </button>
        </div>
        <div id="options"
            class="m-0 p-0 fixed z-10 bottom-[115px] translate-x-96 right-9 border-2 border-yellow-300 rounded-full w-16 h-16 text-center transition-all duration-500 bg-[#FFDF00] shadow">
            <button class="relative w-full h-full rounded-full overflow-hidden">
                <a href="/add-system" class="w-full h-full rounded-full">
                    <div
                        class="w-full h-full text-4xl font-semibold flex justify-center items-center transition-all duration-75">
                        <img src="../Src/Assets/connect-svgrepo-com.svg" class="w-8" alt="">
                    </div>
                </a>
            </button>
        </div>
        <div id="menu-control"
            class="m-0 p-0 fixed z-10 bottom-6 right-7 border border-neutral-400 rounded-full w-20 h-20 text-center transition-all duration-75">
            <button class="relative w-full h-full rounded-full overflow-hidden">
                <div
                    class="w-full h-full text-4xl font-semibold flex justify-center items-center transition-all duration-75">
                    <img src="../Src/Assets/add.png" class="w-8" alt="">
                </div>
            </button>
        </div>
        <script src="../Controller/client_main_controller.js"></script>

        <!-- SWUP JS -->
        <script type="module">
            import Swup from 'https://unpkg.com/swup@4?module';
            const swup = new Swup();
        </script>
</body>

</html>